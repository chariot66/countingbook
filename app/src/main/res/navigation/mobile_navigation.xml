<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_day">

    <fragment
        android:id="@+id/navigation_day"
        android:name="com.example.attemptbookkeeping.ui.day.DayFragment"
        android:label="@string/title_day"
        tools:layout="@layout/fragment_day" />

    <fragment
        android:id="@+id/navigation_month"
        android:name="com.example.attemptbookkeeping.ui.month.MonthFragment"
        android:label="@string/title_month"
        tools:layout="@layout/fragment_month" />

    <fragment
        android:id="@+id/navigation_year"
        android:name="com.example.attemptbookkeeping.ui.year.YearFragment"
        android:label="@string/title_year"
        tools:layout="@layout/fragment_year" />

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.attemptbookkeeping.ui.user.UserFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_year" />
</navigation>